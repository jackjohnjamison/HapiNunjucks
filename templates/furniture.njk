{% import 'macros/links.njk' as links %}
{% import 'macros/images.njk' as images %}

<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>{{ model.title }}</title>
        <meta name="The Hapi Nun" content="A toy I made for development fun">
        <meta name='John "Jack" Jamison' content="">

        <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body class="page--{{model.pageName}}">
        {% block body %}
            <div class="wrapper wrapper--body">
                {% block header_nav %}
                    {% include 'includes/header-nav.njk' %}
                {% endblock %}

                <div class="wrapper wrapper--main">
                    {% block page_heading %}
                        {% include 'includes/page-heading.njk' %}
                    {% endblock %}

                    {% block content %}<p>No content has been added to this page</p>{% endblock %}
                </div>

                <div class="wrapper wrapper--footer">
                    {% block footer %}
                        {% include 'includes/footer.njk' %}
                    {% endblock %}
                </div>
            </div>

            {% block site_scripts %}
                {% if debug %}
                    <script> const modelDebug = {{debug | safe}} </script>
                    <script src="js/debug.js"></script>
                {% endif %}
            {% endblock %}

            {% block additional_scripts %}{% endblock %}
        {% endblock %}
    </body>
</html>