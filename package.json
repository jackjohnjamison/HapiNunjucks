{
  "name": "hapinunjucks",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "nodemonConfig": {
    "watch": ["server.js", "templates/", "lib/"],
    "ext": "js, njk",
    "events": {
      "restart": "browser-sync reload"
    }
  },
  "dependencies": {
    "@hapi/hapi": "^19.2.0",
    "@hapi/inert": "^6.0.1",
    "@hapi/vision": "^6.0.0",
    "@hapi/wreck": "^17.0.0",
    "concurrently": "^5.2.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-sass": "^4.1.0",
    "gulp-strip-comments": "^2.5.2",
    "nunjucks": "^3.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "gulp-babel": "^8.0.0",
    "gulp-babel-minify": "^0.5.1",
    "nodemon": "^2.0.4"
  },
  "scripts": {
    "start": "node server.js",
    "gulp": "gulp",
    "dev": "concurrently \"npm run gulp\" \"nodemon server.js\" \"browser-sync start --proxy=\"http://localhost:3000/\" --files=\"assets/dist/**/*\" --no-inject-changes\" ",
    "build": "gulp build",
    "build-image": "docker build -t johnjamison/hapi-nun .",
    "push": "docker push johnjamison/hapi-nun",
    "dist": "npm run build && npm run build-image && npm run push",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC"
}
